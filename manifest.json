{
  "manifest_version": 3,
  "name": "BOSS直聘招聘助手",
  "version": "1.0.0",
  "description": "智能匹配简历与岗位JD，AI驱动的个性化打招呼生成工具",
  "author": "云淡风轻 (winkovo0818)",
  "homepage_url": "https://github.com/winkovo0818/boss-plugin",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.zhipin.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.zhipin.com/job_detail/*",
        "https://www.zhipin.com/web/geek/jobs*"
      ],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
